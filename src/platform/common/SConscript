Import('env')

env.Append(CPPPATH=[Dir('.')])

env.add_sources([
'Lock.cc',
])

if env.conf.bool('pal_firmware'):
    env.add_sources([
    'palFirmwareAsync.cc'
    ])
    
if env.conf.bool('pal_mac') or env.conf.str('mac') in ['dsme','pure_sniffer']:
    SConscript('mac/SConscript')

SConscript('palLocation/SConscript')
